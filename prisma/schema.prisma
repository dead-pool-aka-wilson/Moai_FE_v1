// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Meme {
  id        String  @id @default(uuid())
  name      String
  symbol    String
  desc      String
  memeId    String
  imageUri  String
  creator   User?   @relation(fields: [creatorId], references: [id])
  creatorId String?

  @@map("meme")
}

model User {
  id       String  @id @default(uuid())
  name     String?
  spending String  @unique
  posts    Meme[]

  @@map("users")
}
